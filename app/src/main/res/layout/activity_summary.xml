<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="45dp"
    android:orientation="vertical"
    tools:context=".SummaryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Account Detail"
        android:fontFamily="sans-serif"
        android:textSize="24dp"
        android:id="@+id/text_view_account_detail" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Fullname"
        android:layout_marginTop="24dp"
        android:id="@+id/text_view_your_fullname" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your Email Address"
        android:id="@+id/text_view_your_email_address" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your Phone Number"
        android:id="@+id/text_view_your_phone_number" />


</LinearLayout>

